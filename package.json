{
  "name": "playwright-automation-framework",
  "version": "1.0.0",
  "description": "udemy course",
  "main": "index.js",
  "scripts": {
    "cucumberTest": "cucumber-js src/features/*.feature --require-module ts-node/register --require src/step-definitions/**/**/*.ts --require src/utils/cucumber-timeout.ts",
    "smokeTest": "cucumber-js src/features/*.feature --require-module ts-node/register --require src/step-definitions/**/**/*.ts --require src/utils/cucumber-timeout.ts --tags @smoke",
    "loginTest": "cucumber-js src/features/*.feature --require-module ts-node/register --require src/step-definitions/**/**/*.ts --require src/utils/cucumber-timeout.ts --tags @login",
    "precucumber": "rimraf reports && mkdir reports",
    "cucumber": "npx cucumber-js && ts-node ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lasgill3/playwright-automation-framework.git"
  },
  "author": "lasgill",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lasgill3/playwright-automation-framework/issues"
  },
  "homepage": "https://github.com/lasgill3/playwright-automation-framework#readme",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.7.2",
    "dotenv": "^17.2.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
